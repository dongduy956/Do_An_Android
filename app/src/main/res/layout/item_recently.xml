<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:layout_height="250dp"
    android:padding="10dp"
    android:background="@drawable/background"
    >


    <ImageView
        android:id="@+id/productImageRecently"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/discountberry" />

    <TextView
        android:id="@+id/productNameRecently"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Dương Đông Duy"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/productImageRecently"
        app:layout_constraintVertical_bias="0"
        android:src="@drawable/discountberry" />
    <TextView
        android:id="@+id/productPriceRecently"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="20.000.000"
        android:textColor="@color/orange"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/donvitien"
        app:layout_constraintTop_toBottomOf="@+id/productNameRecently"
        app:layout_constraintVertical_bias="0.033" />

    <TextView
        android:id="@+id/donvitien"
        android:layout_width="6.6dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="đ"
        android:textColor="@color/orange"
        android:textSize="11.5sp"
        app:layout_constraintBottom_toBottomOf="@id/productPriceRecently"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.031"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/productNameRecently"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>
